.row.person-brief
  .col-xs-12
    .row
      .col-xs-12
        %h2
          = person.complex_name
    .row
      .col-xs-12.col-sm-3
        = person_photo(person, :standart, class: 'img-thumbnail')
      .col-xs-12.col-sm-9
        = link_to t('links.edit_profile'), edit_person_registration_path(person)
      - if person.last_academic_group.present?
        .col-xs-12.col-sm-9.vert-offset-top-1
          = t('static_pages.home.student_of_academic_group')
          = link_to person.last_academic_group.title, academic_group_path(person.last_academic_group)
        - if person.last_academic_group["message_#{locale}"].present?
          .col-xs-12.col-sm-9
            = t('static_pages.home.message_for_group')
            %p
              = person.last_academic_group["message_#{locale}"]
